// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          Int @id @default(autoincrement())
  name        String
}

model Account_Role {
  id          Int @id @default(autoincrement())
  user_id     Int
  role_id     Int
}

model User {
  id          Int @id @default(autoincrement())
  email       String @unique
  name        String 
  avatar      String
  password    String
}

model Friend {
  id          Int @id @default(autoincrement())
  user_id     Int
  name        String
  email       String @unique
  gender      Int @default(0)
  age         Int
  hobbies     String
  description String
}

model Account {
  id          Int @id @default(autoincrement())
  user_id     Int
  last_login  DateTime
}